<div>
    <div>
        <img src="{{ section.settings.user_img | img_url: "300x300" }}" alt="">

        <h3>
            {{section.settings.user_name}}
        </h3>
        <p>
            {{section.settings.user_bio}}
        </p>
    </div>
</div>


{% schema %}
  {
    "name": "Slideshow",

    "settings": [
      {
        "id": "header",
        "type": "text",
        "label": "Profile Settings"
      },
      {
          "type":"image_picker",
          "id":"user_img",
          "label":"User Image"
      },
      {
          "type":"text",
          "id":"user_name",
          "label":"User Name"
      },
      {
          "type":"richtext",
          "id":"user_bio",
          "label":"User Bio"
      }
    ],

    "presets": [
      {
        "category": "Profile",
        "name": "Add Profile"
        
      }
      
    ]
  }
{% endschema %}